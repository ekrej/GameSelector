<Page
    x:Class="GameSelector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameSelector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GameSelector.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="#00000000" Width="1096" Loaded="Page_Loaded">

    <Grid x:Name="RootGrid"  RequestedTheme="Light" Background="#FF3E3B3B" BorderBrush="#FFD1D1D1" FocusVisualSecondaryBrush="#99FFFFFF" 
          FocusVisualPrimaryBrush="White" Width="1096" >
        <!-- Resources -->
        <Grid.Resources>
            <ThemeShadow x:Name="GridShadow"/>
        </Grid.Resources>



        <Grid x:Name="BackgroundGrid" />

        <!-- Games list -->
        <Grid x:Name="ListBoxGrid" Shadow="{StaticResource GridShadow}" Translation="0,0,32" Margin="32,32,564,138" Width="505" Height="817" Background="#BFD6D6D6">
            <ListBox x:Name="GamesListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Opacity="0.75" Width="503" CornerRadius="8,8,8,8"
                     ItemsSource="{x:Bind Games}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Padding="5,0,5,0"
                                       Text="{Binding Title}" Width="470" CornerRadius="12,12,12,12" Height="36" FontSize="24" TextAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Add -->
        <Grid x:Name="AddButtonGrid" Shadow="{StaticResource GridShadow}" Translation="0,0,32" Width="100" Height="80" Margin="282,904,714,21">
            <Button VerticalAlignment="Top" Height="72" Width="100" Background="#FF967BB6" CornerRadius="12,12,12,12" HorizontalAlignment="Center" Click="AddButtonClick">
                <Image Height="70" Width="64" Source="/Assets/Icons/Add/add.ico" Margin="0,-3,0,0" />
            </Button>
        </Grid>
        <!-- Delete -->
        <Grid x:Name="DeleteButtonGrid" Shadow="{StaticResource GridShadow}" Translation="0,0,32" Width="100" Height="80" Margin="432,904,564,21">
            <Button VerticalAlignment="Top" Height="72" Width="100" Background="#FF967BB6" CornerRadius="12,12,12,12" HorizontalAlignment="Center" Click="DeleteButtonClick">
                <Image Height="64" Width="64" Source="/Assets/Icons/Delete/delete.ico" Margin="0,-2,0,0"/>
            </Button>
        </Grid>

        <!-- selector -->
        <TextBlock HorizontalAlignment="Left" Margin="565,0,0,0" Text="No game selected yet" TextWrapping="Wrap" VerticalAlignment="Center" 
                   Width="500" Height="61" FontSize="32" TextAlignment="Center" RequestedTheme="Dark"/>
        <Grid x:Name="SelectButtonGrid"  Shadow="{StaticResource GridShadow}" Translation="0,0,32" Height="80" Width="361" Margin="634,904,101,21">
            <Button Height="72" Width="361" Background="#967bb6" CornerRadius="12,12,12,12" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Click="SelectButtonClick">
                <Grid>
                    <Image HorizontalAlignment="Left" Height="75" VerticalAlignment="Top" Width="64" Source="/Assets/Icons/Dice/D20_Thin.ico" Margin="0,-4,0,0"/>
                    <TextBlock Text="Select a game" Margin="75,9,0,0" ></TextBlock>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>
