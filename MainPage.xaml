<Page
    x:Class="GameSelector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameSelector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="Black" Width="1096">

    <Grid RequestedTheme="Light" Background="#FF3E3B3B" BorderBrush="#FFD1D1D1" FocusVisualSecondaryBrush="#99FFFFFF" FocusVisualPrimaryBrush="White" Width="1096">

        <Button Content="Select a game" Margin="0,0,101,32" VerticalAlignment="Bottom" RenderTransformOrigin="-0.601,0.496" Height="64" Width="361" Background="#967bb6" CornerRadius="8,8,8,8" HorizontalAlignment="Right" FontSize="32"/>
        <ListBox Width="500" HorizontalAlignment="Left" Margin="32,128,32,32" CornerRadius="8,8,8,8"/>
        <TextBox HorizontalAlignment="Left" Margin="565,0,0,0" Text="No game selected yet" TextWrapping="Wrap" VerticalAlignment="Center" Width="500" Height="61" FontSize="32" TextAlignment="Center" Background="#00A24DD3" BorderBrush="#00000000"/>


    </Grid>
</Page>
